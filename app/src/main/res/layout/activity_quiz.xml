<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_green_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="159dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/IF"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/pergunta"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="Qual o ano de criação do IFBA - IRECÊ?"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="208dp" />

    <Button
        android:id="@+id/btnResponder"
        android:layout_width="274dp"
        android:layout_height="52dp"
        android:layout_marginBottom="44dp"
        android:text="RESPONDER"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/rgRespostas"
        android:layout_width="257dp"
        android:layout_height="308dp"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="284dp">

        <RadioButton
            android:id="@+id/rbResposta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2005"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="427dp" />

        <RadioButton
            android:id="@+id/rbResposta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2010"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="467dp" />

        <RadioButton
            android:id="@+id/rbResposta3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="507dp" />

        <RadioButton
            android:id="@+id/rbResposta4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2008"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="547dp" />

    </RadioGroup>
</android.support.constraint.ConstraintLayout>